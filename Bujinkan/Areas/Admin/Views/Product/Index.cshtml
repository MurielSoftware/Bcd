@using Client.Core.HtmlHelpers
@using Shared.Core.Constants
@using Shared.I18n.Constants
@using Shared.I18n.Utils

@{
    ViewBag.Title = Html.LocalizedDisplay(MessageKeyConstants.LABEL_PRODUCT);
}

@section ribbon {
    <ul class="ribbon-group">
        <li>
            @Html.LocalizedActionLink(@"<i class='" + HtmlConstants.FA_IMAGE_PRODUCT + "'></i> " + ResourceUtils.GetString(MessageKeyConstants.LABEL_ADD_PRODUCT), WebConstants.VIEW_CREATE_PREDEFINED, WebConstants.CONTROLLER_PRODUCT, null, new { @class = "ribbon-button" })
        </li>
        <li class="ribbon-group-title">
            @Html.LocalizedDisplay(MessageKeyConstants.LABEL_PRODUCTS)
        </li>
    </ul>
}

@section header{
    <div class="header-section-title">
        <h1><i class="@HtmlConstants.FA_IMAGE_CATEGORY"></i> @Html.LocalizedDisplay(MessageKeyConstants.LABEL_PRODUCT)</h1>
        <small>@Html.LocalizedDisplay(MessageKeyConstants.LABEL_PRODUCT)</small>
    </div>
    <img src="/Content/images/admin/admin-cover.jpg" />
}

@section breadcrumb {
    <ul class="breadcrumb">
        <li>@Html.LocalizedDisplay(MessageKeyConstants.LABEL_HOME)</li>
        <li>@Html.LocalizedActionLink(MessageKeyConstants.LABEL_PRODUCTS, WebConstants.VIEW_INDEX, WebConstants.CONTROLLER_PRODUCT)</li>
    </ul>
}

<div class="panel">
    <div class="panel-heading">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#form" data-toggle="tab">
                    <i class="fa fa-list"></i> @Html.LocalizedDisplay(MessageKeyConstants.LABEL_PRODUCTS)
                </a>
            </li>
        </ul>
    </div>
    <div class="panel-body">
        @Ajax.RemoteContent(WebConstants.VIEW_PAGED_LIST, WebConstants.CONTROLLER_PRODUCT, WebConstants.AREA_ADMIN)
    </div>
</div>