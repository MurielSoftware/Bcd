@using Client.Core.HtmlHelpers
@using Shared.Core.Constants
@using Shared.I18n.Constants

@{
    ViewBag.Title = Html.LocalizedDisplay(MessageKeyConstants.LABEL_PRODUCT_CATEGORY);
}

@section ribbon {
    <ul class="ribbon-group">
        <li>
            @Html.DialogActionLink("<i class='fa fa-cog'></i>" + Html.LocalizedDisplay(MessageKeyConstants.LABEL_ADD_CATEGORY), HtmlConstants.DIALOG_PRODUCT_CATEGORY, WebConstants.VIEW_CREATE, WebConstants.CONTROLLER_PRODUCT_CATEGORY, null, new { @class = "ribbon-button" })
        </li>
        <li class="ribbon-group-title">
            @Html.LocalizedDisplay(MessageKeyConstants.LABEL_PRODUCT_CATEGORY)
        </li>
    </ul>
}

@section header {
    <div class="header-section-title">
        <h1><i class="@HtmlConstants.FA_IMAGE_CATEGORY"></i> @Html.LocalizedDisplay(MessageKeyConstants.LABEL_PRODUCT_CATEGORY)</h1>
        <small>@Html.LocalizedDisplay(MessageKeyConstants.LABEL_PRODUCT_CATEGORY)</small>
    </div>
    <img src="/Content/images/admin/admin-cover.jpg" />
}

@section breadcrumb {
    <ul class="breadcrumb">
        <li>@Html.LocalizedDisplay(MessageKeyConstants.LABEL_HOME)</li>
        <li>@Html.LocalizedActionLink(MessageKeyConstants.LABEL_PRODUCT_CATEGORY, WebConstants.VIEW_INDEX, WebConstants.CONTROLLER_PRODUCT_CATEGORY)</li>
    </ul>
}

<div class="panel">
    <div class="panel-heading">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#form" data-toggle="tab">
                    <i class="fa fa-list"></i> @Html.LocalizedDisplay(MessageKeyConstants.LABEL_PRODUCT_CATEGORY)
                </a>
            </li>
        </ul>
    </div>
    <div class="panel-body">
        @Ajax.RemoteContent(WebConstants.VIEW_PAGED_LIST, WebConstants.CONTROLLER_PRODUCT_CATEGORY, WebConstants.AREA_ADMIN)
    </div>
</div>