@model PagedList.IPagedList<Shared.Dtos.Categories.LinkCategoryDto>

@using Client.Core.HtmlHelpers
@using Shared.Core.Constants
@using PagedList.Mvc

@{
//Culture = UICulture = Shared.Core.Utils.LocalizationUtils.GetCultureString();
}

<div id="@HtmlConstants.PAGED_LIST_LINK_CATEGORY">
    <table class="table table-hover">
        <thead>
            <tr role="row">
                <th class="th-icon"></th>
                <th>@Html.LocalizedDisplay(MessageKeyConstants.LABEL_NAME)</th>
                <th class="th-administration-box"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><i class='@HtmlConstants.FA_IMAGE_CATEGORY'></i></td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        @Html.DialogActionLink("<i class='fa fa-pencil-square-o'></i>", HtmlConstants.DIALOG_LINK_CATEGORY, WebConstants.VIEW_CREATE, WebConstants.CONTROLLER_LINK_CATEGORY, new { id = item.Id }, new { title = MessageKeyConstants.LABEL_UPDATE })
                        @Html.DialogActionLink("<i class='fa fa-remove'></i>", HtmlConstants.DIALOG_CONFIRMATION, WebConstants.DIALOG_CONFIRMATION, WebConstants.CONTROLLER_LINK_CATEGORY, new { id = item.Id, message = MessageKeyConstants.OBJECT_INFORMATION_DELETE_MESSAGE, afterSuccessAction = WebConstants.VIEW_DELETE_CONFIRMED }, new { title = MessageKeyConstants.LABEL_DELETE })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.PageCount > 1)
    {
        @*@Html.PagedListPager(Model, page => Url.Action(wEBConstants.VIEW_PAGED_LIST, new Shared.Core.Url.PageRouteValueDictionary(ViewBag.FilterDto, new Dictionary<string, object>() { { "page", page } })), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = HtmlConstants.PAGED_LIST_ROLE, LoadingElementId = "loading" }));*@
    }
</div>