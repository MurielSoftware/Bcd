@using Shared.Core.Constants
@using Shared.Core.Utils
@using Client.Core.HtmlHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Content/images/favicon.png">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css-admin")
</head>
<body>
    <div class="wrapper">
        <header class="navbar navbar-default">
            <div class="ribbon">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#home" role="tab" data-toggle="tab">
                            @Html.LocalizedDisplay(MessageKeyConstants.LABEL_HOME)
                        </a>
                    </li>
                    <li>
                        <a href="#administration" role="tab" data-toggle="tab">
                            @Html.LocalizedDisplay(MessageKeyConstants.LABEL_ADMINISTRATION)
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="home" class="tab-pane active" role="tabpanel">
                        <ul class="ribbon-group">
                            <li>
                                @Html.LocalizedActionLink(@"<i class='fa fa-user'></i> " + ResourceUtils.GetString(MessageKeyConstants.LABEL_TEACHER), WebConstants.VIEW_CREATE_PREDEFINED, WebConstants.CONTROLLER_USER, null, new { @class = "ribbon-button" })
                            </li>
                            <li>
                                @Html.LocalizedActionLink(@"<i class='fa fa-graduation-cap'></i> " + ResourceUtils.GetString(MessageKeyConstants.LABEL_TRAINING), WebConstants.VIEW_CREATE, WebConstants.CONTROLLER_TRAINING, null, new { @class = "ribbon-button" })
                            </li>
                            <li class="ribbon-group-title">
                                @Html.LocalizedDisplay(MessageKeyConstants.LABEL_ADD)
                            </li>
                        </ul>
                        @RenderSection("ribbon", required: false)
                    </div>
                    <div id="administration" class="tab-pane" role="tabpanel">
                        <ul class="ribbon-group">
                            <li>
                                @Html.LocalizedActionLink(@"<i class='fa fa-cogs'></i> " + ResourceUtils.GetString(MessageKeyConstants.LABEL_ROLES), WebConstants.VIEW_INDEX, WebConstants.CONTROLLER_ROLE, null, new { @class = "ribbon-button" })
                            </li>
                            <li class="ribbon-group-title">
                                @Html.LocalizedDisplay(MessageKeyConstants.LABEL_ADMINISTRATION)
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <div id="page-header">
            @RenderSection("header", required: true)
        </div>
        @RenderSection("breadcrumb", required: false)
        <div id="page-content">
            @RenderBody()
        </div>
    </div>
    <div id="modal-dialogs"></div>
    @Scripts.Render("~/bundles/script-admin")
    @RenderSection("scripts", required: false)
</body>
</html>
